@model AlbertEinsteinTeste.Models.Consulta

@{
    ViewData["Title"] = "Editar";
}

<h2>@ViewData["Title"]</h2>

<h4>Consulta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Sintoma" class="control-label"></label>
                <input asp-for="Sintoma" class="form-control" />
                <span asp-validation-for="Sintoma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diagnostico" class="control-label"></label>
                <input asp-for="Diagnostico" class="form-control" />
                <span asp-validation-for="Diagnostico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataConsulta" class="control-label"></label>
                <input asp-for="DataConsulta" class="form-control" />
                <span asp-validation-for="DataConsulta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicoId" class="control-label"></label>
                <input asp-for="Medico.Nome" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="PacienteId" class="control-label"></label>
                <input asp-for="Paciente.Nome" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="ConsultaSituacao" class="control-label"></label>
                <input asp-for="ConsultaSituacao.DescricaoSituacao" class="form-control" readonly />
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar edição" class="btn btn-default btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default btn-warning">Voltar</a>
</div>

