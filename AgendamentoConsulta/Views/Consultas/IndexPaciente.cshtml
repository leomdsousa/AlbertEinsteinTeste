@model IEnumerable<AlbertEinsteinTeste.Models.Consulta>

@{
    ViewData["Title"] = "Consultas - Paciente";
}

<h2 class="panel-title">@ViewData["Title"]</h2>

<p>
    <a asp-action="AgendarConsulta" class="btn btn-default btn-success">Agendar consulta</a>
</p>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="ConsultasPorPaciente">
            <fieldset>
                <legend>Pesquisa</legend>
                <div class="form-group">
                    <label for="nomePaciente" class="col-lg-2 control-label">Por paciente: </label>
                    <div class="col-lg-10">
                        <input type="text" name="nomePaciente" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary btn-info">Filtrar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-dark text-light text-justify">
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sintoma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diagnostico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataConsulta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsultaSituacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="success">
                <th>
                    @Html.DisplayFor(modelItem => item.Paciente.Nome)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.Medico.Nome)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Sintoma)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Diagnostico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataConsulta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConsultaSituacao.DescricaoSituacao)
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>
