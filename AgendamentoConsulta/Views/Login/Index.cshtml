@model AgendamentoConsulta.Models.ViewModels.LoginViewModel;

@*@{
    Layout = null;
}*@

<head>
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<div class="sidenav">
    <div class="login-main-text">
        <h2>Agendamentos<br> Login</h2>
    </div>
</div>
<div class="main">
    <div class="col-md-6 col-sm-12">
        <div class="login-form">
            @using (@Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                <div class="form-group">
                    <label>Usuário</label>
                    <input asp-for="Usuario" type="text" class="form-control" placeholder="Inserir usuário">
                </div>
                <div class="form-group">
                    <label>Senha</label>
                    <input asp-for="Senha" type="password" class="form-control" placeholder="Insirir senha">
                </div>
                <button type="submit" class="btn btn-black">Entrar</button>
            }
        </div>
    </div>
</div>